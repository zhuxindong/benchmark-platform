# 数据库配置
# 格式: mysql://用户名:密码@主机:端口/数据库名
DATABASE_URL=mysql://root:root@localhost:3306/benchmark

# 应用配置
APP_NAME=基准测试评分平台
APP_VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# JWT配置
# 生产环境请使用强密码，建议使用 openssl rand -hex 32 生成
SECRET_KEY=change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OAuth配置
# 需要在linux.do申请OAuth应用
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OAUTH_CALLBACK_URL=http://your_domain.com/api/v1/auth/linuxdo/callback

# Mock配置
ENABLE_MOCK_AUTH=true
OAUTH_AUTHORIZATION_ENDPOINT=https://connect.linux.do/oauth2/authorize
OAUTH_TOKEN_ENDPOINT=https://connect.linux.do/oauth2/token
OAUTH_USER_ENDPOINT=https://connect.linux.do/api/user

# CORS配置
ALLOWED_ORIGINS=*

# 日志配置
LOG_LEVEL=INFO